  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true
  },
  "include": ["**/*.ts", "**/*.js", "client/Editor.jsx", "client/App.jsx"],
  "exclude": ["node_modules", "dist"]
}

